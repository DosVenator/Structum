generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Object {
  id         String      @id @default(cuid())
  name       String      @unique
  active     Boolean     @default(true)
  createdAt  DateTime    @default(now())

  users      User[]
  items      Item[]
  operations Operation[]

  // transfers
  transfersFrom Transfer[] @relation("TransferFrom")
  transfersTo   Transfer[] @relation("TransferTo")
}

model User {
  id                 String     @id @default(cuid())
  login              String     @unique
  passwordHash       String
  role               String     @default("user") // "admin" | "user"
  mustChangePassword Boolean    @default(false)
  active             Boolean    @default(true)
  createdAt          DateTime   @default(now())

  objectId String?
  object   Object?   @relation(fields: [objectId], references: [id])

  operations Operation[]

  // transfers
  transfersCreated Transfer[] @relation("TransferCreatedBy")
  transfersActed   Transfer[] @relation("TransferActedBy")
}

model Item {
  id        String   @id @default(cuid())
  code      String
  name      String
  quantity  Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  objectId  String
  object    Object   @relation(fields: [objectId], references: [id])

  operations Operation[]

  @@unique([objectId, code]) // на одном складе один штрихкод = одна позиция
}

model Operation {
  id        String   @id @default(cuid())
  type      String   // "in" | "out"
  qty       Int
  from      String
  ts        BigInt
  time      String
  createdAt DateTime @default(now())

  objectId String
  object   Object   @relation(fields: [objectId], references: [id])

  itemId   String
  item     Item     @relation(fields: [itemId], references: [id])

  userId   String?
  user     User?    @relation(fields: [userId], references: [id])

   // ✅ NEW: связь с передачей (если операция создана из Transfer)
  transferId String?
  transfer   Transfer? @relation(fields: [transferId], references: [id])

  @@index([objectId, ts])
  @@index([itemId, ts])
}

enum TransferStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model Transfer {
  id        String         @id @default(cuid())
  code      String
  name      String
  qty       Int
  status    TransferStatus @default(PENDING)

  createdAt DateTime       @default(now())
  ts        BigInt         // когда создано (как у операций)
  time      String         // строка для UI

   // ✅ NEW: комментарий к передаче
  damaged   Boolean        @default(false)
  comment   String?
  createdById String
  createdBy   User          @relation("TransferCreatedBy", fields: [createdById], references: [id])

  actedById String?
  actedBy   User?           @relation("TransferActedBy", fields: [actedById], references: [id])
  actedAt   DateTime?
  actedTs   BigInt?
  actedTime String?

  fromObjectId String
  fromObject   Object       @relation("TransferFrom", fields: [fromObjectId], references: [id])

  toObjectId String
  toObject   Object         @relation("TransferTo", fields: [toObjectId], references: [id])

  // ✅ NEW: операции, созданные при accept (in/out)
  operations Operation[]

  @@index([toObjectId, status, createdAt])
  @@index([fromObjectId, status, createdAt])
}
// --- connect-pg-simple table (do not manage via Prisma) ---
model Session {
  sid    String   @id @db.VarChar(255)
  sess   Json
  expire DateTime @db.Timestamp(6)

  @@map("session")
  @@ignore
}